{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "build",
      "outDir": "dist",
      "module": "ESNext",
      "target": "ES5",
      "lib": ["es6", "dom", "es2016", "es2017"],
      "sourceMap": true,
      "jsx": "react",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "allowJs": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": ["node_modules"]
}